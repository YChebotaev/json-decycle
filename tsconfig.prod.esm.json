{
  "compilerOptions": {
    "outDir": "./app/dist/esm",
    "module": "es2020",
    "target": "es2019",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./test",
    "./repl",
    "./app/dist"
  ],
  "include": [
    "./app/src"
  ]
}